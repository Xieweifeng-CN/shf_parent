<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.jack.dao.UserInfoDao">
    <!-- 用于select查询公用抽取的列 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user_info (
            id ,
            phone ,
            password ,
            nick_name ,
            status
        ) values (
                     #{id} ,
                     #{phone} ,
                     #{password} ,
                     #{nickName} ,
                     #{status}
                 )
    </insert>

    <update id="update" >
        update user_info set
        <if test="phone != null and phone != ''">
            phone = #{phone} ,
        </if>
        <if test="password != null and password != ''">
            password = #{password} ,
        </if>
        <if test="nickName != null and nickName != ''">
            nick_name = #{nickName} ,
        </if>
        <if test="status != null and status != ''">
            status = #{status} ,
        </if>
        update_time =  now()
        where id = #{id}
    </update>

    <update id="delete">
        update user_info
        set update_time = now() ,is_deleted = 1
        where id = #{id}
    </update>

    <select id="getById" resultType="com.jack.entity.UserInfo">
        select *
        from user_info
        where id = #{id}
    </select>

    <select id="findPage" resultType="com.jack.entity.UserInfo">
        select *
        from user_info
        <where>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>

    <select id="getByPhone" resultType="com.jack.entity.UserInfo">
        select *
        from user_info
        where phone = #{phone}
        and is_deleted = 0
    </select>

</mapper>